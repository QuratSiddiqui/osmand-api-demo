<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity"
	tools:ignore="HardcodedText">

	<Button
		android:id="@+id/download_maps_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/content_padding"
		android:layout_marginVertical="@dimen/content_padding_half"
		android:minHeight="@dimen/route_info_control_buttons_height"
		android:text="@string/downloads" />

	<Button
		android:id="@+id/simple_map_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/content_padding"
		android:layout_marginVertical="@dimen/content_padding_half"
		android:minHeight="@dimen/route_info_control_buttons_height"
		android:text="Simple Map" />

	<Button
		android:id="@+id/navigate_map_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/content_padding"
		android:layout_marginVertical="@dimen/content_padding_half"
		android:minHeight="@dimen/route_info_control_buttons_height"
		android:text="Navigate Map" />

	<Button
		android:id="@+id/points_on_map_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/content_padding"
		android:layout_marginVertical="@dimen/content_padding_half"
		android:minHeight="@dimen/route_info_control_buttons_height"
		android:text="Points on map" />

	<Button
		android:id="@+id/full_map_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/content_padding"
		android:layout_marginVertical="@dimen/content_padding_half"
		android:minHeight="@dimen/route_info_control_buttons_height"
		android:text="Full OsmAnd Map Activity" />

</LinearLayout>
